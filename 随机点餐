    <div class="container">
        <h1 class="title">ğŸ€ å…¬ä¸»è¯·ç‚¹é¤ ğŸ€</h1>
        
        <div class="input-section">
            <input 
                type="text" 
                class="input-field" 
                id="optionInput" 
                placeholder="è¾“å…¥å¾…é€‰é¡¹..."
                maxlength="20"
            >
            <button class="add-btn" onclick="addOption()">æ·»åŠ </button>
        </div>

        <div class="options-list" id="optionsList">
            <div class="empty-state" id="emptyState">æš‚æ— é€‰é¡¹ï¼Œè¯·æ·»åŠ è‡³å°‘2ä¸ªé€‰é¡¹</div>
        </div>

        <div class="action-section">
            <button class="start-btn" id="startBtn" onclick="startRandom()">
                å¼€å§‹éšæœºé€‰æ‹©
            </button>
        </div>

        <div class="countdown" id="countdown"></div>

        <div class="result" id="result" style="display: none;">
            <div class="result-label">ğŸ‰ ä»Šå¤©åƒè¿™ä¸ªï¼ğŸ‰</div>
            <div class="result-text" id="resultText"></div>
            <div class="result-emoji" id="resultEmoji"></div>
        </div>
    </div>

    <script>
        let options = [];
        let isRunning = false;

        // ä»localStorageåŠ è½½é€‰é¡¹
        window.onload = function() {
            const savedOptions = localStorage.getItem('foodOptions');
            if (savedOptions) {
                options = JSON.parse(savedOptions);
                renderOptions();
            }
            
            // å›è½¦é”®æ·»åŠ 
            document.getElementById('optionInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    addOption();
                }
            });
        };

        function addOption() {
            const input = document.getElementById('optionInput');
            const optionText = input.value.trim();
            
            if (optionText === '') {
                alert('è¯·è¾“å…¥é€‰é¡¹å†…å®¹ï¼');
                return;
            }
            
            if (options.length >= 20) {
                alert('æœ€å¤šåªèƒ½æ·»åŠ 20ä¸ªé€‰é¡¹å“¦ï¼');
                return;
            }
            
            options.push(optionText);
            input.value = '';
            input.focus();
            
            saveOptions();
            renderOptions();
        }

        function deleteOption(index) {
            options.splice(index, 1);
            saveOptions();
            renderOptions();
        }

        function renderOptions() {
            const optionsList = document.getElementById('optionsList');
            const emptyState = document.getElementById('emptyState');
            
            if (options.length === 0) {
                optionsList.innerHTML = '<div class="empty-state" id="emptyState">æš‚æ— é€‰é¡¹ï¼Œè¯·æ·»åŠ è‡³å°‘2ä¸ªé€‰é¡¹</div>';
                return;
            }
            
            optionsList.innerHTML = options.map((option, index) => `
                <div class="option-item">
                    <span class="option-text">${option}</span>
                    <button class="delete-btn" onclick="deleteOption(${index})" title="åˆ é™¤">Ã—</button>
                </div>
            `).join('');
        }

        function saveOptions() {
            localStorage.setItem('foodOptions', JSON.stringify(options));
        }

        function startRandom() {
            if (isRunning) return;
            
            if (options.length < 2) {
                alert('è¯·è‡³å°‘æ·»åŠ 2ä¸ªé€‰é¡¹æ‰èƒ½å¼€å§‹é€‰æ‹©ï¼');
                return;
            }
            
            isRunning = true;
            const startBtn = document.getElementById('startBtn');
            const countdown = document.getElementById('countdown');
            const result = document.getElementById('result');
            
            startBtn.disabled = true;
            result.style.display = 'none';
            
            // å€’è®¡æ—¶
            let count = 3;
            countdown.innerHTML = `<div>${count}</div>`;
            
            const countdownInterval = setInterval(() => {
                count--;
                if (count > 0) {
                    countdown.innerHTML = `<div>${count}</div>`;
                } else {
                    clearInterval(countdownInterval);
                    countdown.innerHTML = '';
                    
                    // éšæœºé€‰æ‹©
                    const randomIndex = Math.floor(Math.random() * options.length);
                    const selectedOption = options[randomIndex];
                    
                    // æ˜¾ç¤ºç»“æœ
                    document.getElementById('resultText').textContent = selectedOption;
                    
                    // éšæœºemoji
                    const emojis = ['ğŸ½ï¸', 'ğŸ¤¤', 'âœ¨', 'ğŸŠ', 'ğŸ˜‹', 'ğŸŒŸ', 'ğŸ’–', 'ğŸ‘‘', 'ğŸ‰', 'ğŸ’•'];
                    const randomEmoji = emojis[Math.floor(Math.random() * emojis.length)];
                    document.getElementById('resultEmoji').textContent = randomEmoji;
                    
                    result.style.display = 'block';
                    
                    // é‡ç½®çŠ¶æ€
                    isRunning = false;
                    startBtn.disabled = false;
                    
                    // æ»šåŠ¨åˆ°ç»“æœ
                    result.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            }, 1000);
        }
    </script>
